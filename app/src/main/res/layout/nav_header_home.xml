<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/imgHeaderHome"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@drawable/ic_bg_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/imgProfileHome"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:layout_marginStart="@dimen/size_10"
        android:background="@drawable/ic_profile_place_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameUserMenu"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/penny_regular"
        android:textStyle="bold"
        android:text="@string/text_welcome"
        android:textSize="@dimen/txt_size_25"
        android:maxLines="2"
        android:textColor="@color/pink_200"
        android:layout_marginStart="@dimen/dim_tay_12"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProfileHome"
        app:layout_constraintTop_toTopOf="@+id/imgProfileHome" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>