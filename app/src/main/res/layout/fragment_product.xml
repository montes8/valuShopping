<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="productListAdapter"
            type="com.tayler.valushopping.ui.home.product.adapter.ProductListAdapter" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/refreshList"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/ctnListProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTitleAdmin"
                    android:layout_width="@dimen/dim_tay_0"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/pink_200"
                    android:layout_marginEnd="@dimen/dim_tay_16"
                    android:layout_marginStart="@dimen/dim_tay_16"
                    android:layout_marginTop="@dimen/dim_tay_12"
                    android:fontFamily="@font/gabi_regular"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size_20"
                    android:lineSpacingExtra="@dimen/size_4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/text_product_choose"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvProductList"
                    android:layout_height="@dimen/dim_tay_0"
                    app:adapter="@{productListAdapter}"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:spanCount="2"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dim_tay_8"
                    android:paddingBottom="@dimen/dim_tay_8"
                    tools:listitem="@layout/row_product"
                    tools:itemCount="4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleAdmin"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ctnListEmpty"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleAdmin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgListEmpty"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_list_empty"
                        android:contentDescription="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textListEmpty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="@dimen/txt_size_25"
                        android:layout_marginTop="@dimen/dim_tay_12"
                        android:fontFamily="@font/ui_tay_montserrat_medium"
                        android:textColor="@color/gray_400"
                        android:text="@string/text_product_empty"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgListEmpty"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <include layout="@layout/shimmer_product_list" />
            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>