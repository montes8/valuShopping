<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="image"
            type="com.tayler.valushopping.repository.network.model.response.ImageMoreResponse" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:id="@+id/cardAdmin"
                android:outlineSpotShadowColor="@color/pink_100"
                app:cardCornerRadius="@dimen/dim_tay_24"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/dim_tay_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="@dimen/dim_tay_12"
                android:layout_height="100dp"
                tools:ignore="UnusedAttribute">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ctlImageMore"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/rowMoreImgDelete"
                        android:contentDescription="@null"
                        android:layout_width="@dimen/dim_tay_24"
                        android:src="@drawable/ic_delete"
                        android:elevation="@dimen/dim_tay_2"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/dim_tay_8"
                        android:layout_height="@dimen/dim_tay_24"
                        app:tint="@color/red" />
                    <ImageView
                        android:contentDescription="@null"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:background="@color/gray_150"
                        android:id="@+id/rowMoreImg"
                        app:srcDrawableStringUrl="@{image.url}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="match_parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>