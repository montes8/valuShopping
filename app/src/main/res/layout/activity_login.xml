<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_bg_general">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/lottieLogin"
                android:layout_width="@dimen/size_152"
                android:layout_height="@dimen/size_152"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/dim_tay_20"
                android:src="@drawable/ic_logo_login" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvContentActiveInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_tay_16"
                android:layout_marginTop="@dimen/dim_tay_24"
                android:layout_marginEnd="@dimen/dim_tay_16"
                android:layout_marginBottom="@dimen/dim_tay_16"
                android:outlineSpotShadowColor="@color/pink_100"
                app:cardCornerRadius="@dimen/dim_tay_24"
                app:cardElevation="@dimen/dim_tay_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottieLogin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_32"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lottieLogin">


                    <com.gb.vale.uitaylibrary.label.UiTayEditLayout
                        android:id="@+id/editEmail"
                        style="@style/UiTayStyleEditLayout"
                        android:layout_width="@dimen/dim_tay_0"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        app:uiTayLHint="Usuario"
                        android:inputType="textCapSentences"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.gb.vale.uitaylibrary.label.UiTayEditLayout
                        android:id="@+id/editPassword"
                        app:uiTayLHint="ContraseÃ±a"
                        style="@style/UiTayStyleEditLayout"
                        app:uiTayLPasswordEnabled="true"
                        android:layout_width="@dimen/dim_tay_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_tay_20"
                        android:inputType="numberPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editEmail"
                       />

                    <com.gb.vale.uitaylibrary.button.UITayButton
                        android:id="@+id/btnLogin"
                        android:layout_width="@dimen/dim_tay_0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/size_32"
                        app:uiTayBtnText="Iniciar sesion"
                        app:uiTayBtnEnable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editPassword" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>