<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="com.tayler.valushopping.repository.network.model.ProductResponse" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_tay_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/cardAdmin"
                android:outlineSpotShadowColor="@color/pink_100"
                app:cardCornerRadius="@dimen/dim_tay_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dim_tay_8"
                android:layout_marginStart="@dimen/dim_tay_16"
                android:layout_marginEnd="@dimen/dim_tay_16"
                android:layout_marginBottom="@dimen/dim_tay_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/rowTitleBottom"
                app:cardElevation="@dimen/dim_tay_12"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ctlAdmin"
                    android:layout_height="@dimen/size_152">
                    <TextView
                        android:id="@+id/rowStateProduct"
                        android:layout_width="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/text_available"
                        android:textSize="@dimen/txt_size_10"
                        app:mapperStateProduct="@{product.state}"
                        android:textColor="@color/white"
                        android:fontFamily="@font/flex_bold"
                        android:elevation="@dimen/dim_tay_2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/dim_tay_8"
                        android:paddingHorizontal="@dimen/dim_tay_8"
                        android:paddingVertical="@dimen/size_4"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:contentDescription="@null"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:background="@color/gray_150"
                        android:id="@+id/rowProductImg"
                        app:srcDrawableStringUrl="@{product.getLoadImage()}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="match_parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/rowTitleBottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/flex_bold_italic"
                android:textSize="@dimen/dim_tay_sp_text_18"
                android:textColor="@color/pink_200"
                tools:text="titulo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>