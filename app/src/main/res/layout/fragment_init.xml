<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dim_tay_16">

  <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
      android:layout_width="match_parent"
      android:id="@+id/youTubeVale"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:autoPlay="false"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_height="wrap_content"/>
  <TextView
      android:id="@+id/textTitleInit"
      android:layout_width="match_parent"
      android:text="@string/text_not_config"
      android:fontFamily="@font/flex_bold_italic"
      android:textSize="@dimen/txt_size_20"
      android:lineSpacingExtra="@dimen/size_4"
      android:textColor="@color/pink_400"
      android:layout_marginTop="@dimen/dim_tay_12"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/textSubTitleInit"
      android:layout_width="match_parent"
      android:text="@string/text_not_config"
      android:layout_marginTop="@dimen/dim_tay_12"
      android:fontFamily="@font/flex_medium_italic"
      android:textSize="@dimen/dim_tay_sp_text_14"
      android:minLines="5"
      android:lineSpacingExtra="@dimen/size_4"
      android:textColor="@color/pink_100"
      android:layout_height="wrap_content"/>
  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/dim_tay_0"
        android:layout_weight="1"
        android:text="@string/txt_menu_facebook"
        android:textSize="@dimen/txt_size_20"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/dim_tay_12"
        android:drawablePadding="@dimen/dim_tay_8"
        android:fontFamily="@font/ui_tay_montserrat_bold"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_facebook" />
    <TextView
        android:layout_width="@dimen/dim_tay_0"
        android:layout_weight="1"
        android:text="@string/txt_menu_tiktok"
        android:textSize="@dimen/txt_size_20"
        android:layout_marginTop="@dimen/dim_tay_12"
        android:drawablePadding="@dimen/dim_tay_8"
        android:textColor="@color/black"
        android:fontFamily="@font/ui_tay_montserrat_bold"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_tiktok" />

  </androidx.appcompat.widget.LinearLayoutCompat>
  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">

    <TextView
        android:layout_width="@dimen/dim_tay_0"
        android:layout_weight="1"
        android:text="@string/txt_menu_instagram"
        android:textColor="@color/purple"
        android:textSize="@dimen/txt_size_20"
        android:layout_marginTop="@dimen/dim_tay_12"
        android:drawablePadding="@dimen/dim_tay_8"
        android:fontFamily="@font/ui_tay_montserrat_bold"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_instagram" />
    <TextView
        android:layout_width="@dimen/dim_tay_0"
        android:layout_weight="1"
        android:text="@string/txt_menu_youtube"
        android:textSize="@dimen/txt_size_20"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_tay_12"
        android:drawablePadding="@dimen/dim_tay_8"
        android:fontFamily="@font/flex_bold"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_youtube" />

  </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>