<resources>

    <style name="NavigationView">
        <item name="fontFamily">@font/serif_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_tay_sp_text_16</item>
    </style>

    <style name="BottomNavigationView.RowAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/serif_regular</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
    </style>

    <style name="BottomNavigationView.RowAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/serif_regular</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/pink_100</item>
        <item name="colorControlActivated">@color/pink_200</item>
    </style>

    <style name="MyRadioButtonRB" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/pink_200</item>
    </style>

    <style name="Flex" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/flex_bold</item>
        <item name="android:textColor">@color/pink_200</item>
    </style>

    <style name="Custom.Collapsing" parent="Flex">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/penny_regular</item>
    </style>

    <style name="Custom.CollapsingExpand" parent="Flex">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/penny_regular</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
